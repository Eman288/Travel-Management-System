@model MVCPro.Models.LoginData
@{
    var viewName = ViewContext.RouteData.Values["action"].ToString();
    MVCPro.Shared.global.i = 0;
    if (viewName == "LoginUser")
    {
        <head>
            <style>
                .logimg1 {
                    background-image: url('@Url.Content("~/imags/userlogin.png")');
                    background-size: cover;
                }

                label {
                    font-size: 1.3vw;
                }
                body {
                    margin: 0 !important;
                }

                header {
                    filter: opacity(0.5);
                }

                main, .pb-3 {
                    padding-bottom: 0 !important;
                }

                nav {
                    margin-bottom: 0 !important;
                }

                .mb-3 {
                    margin-bottom: 0 !important;
                }

                footer {
                    display: none;
                }

                header:hover {
                    filter: opacity(1);
                }
            </style>
        </head>
    }
}


<form asp-action="LoginUser" method="post" class="logform">
    <div class="logcontent1">
        <div class="reg" style="justify-content:center !important">
            <div class="log1">
                <label asp-for="Email"></label>
                <label asp-for="Password"></label>
            </div>
            <div class="log2">
                <input asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Password" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="regbelow" style="justify-content:space-around !important">
            <div class="regtext">
                <p>Don't have an account?</p>
                <a text-dark" asp-area="" asp-controller="User" asp-action="Register">Create an account</a>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
    <div class="logimg1">
    </div>


</form>