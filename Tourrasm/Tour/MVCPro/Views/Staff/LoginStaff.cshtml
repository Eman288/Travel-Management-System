@model MVCPro.Models.LoginDataStaff
@{
    var viewName = ViewContext.RouteData.Values["action"].ToString();

    if (viewName == "LoginStaff")
    {
        <head>
            <style>
                .logimg1 {
                    background-image: url('@Url.Content("~/imags/staffLogin.png")');
                    background-size: cover;
                }

                label {
                    font-size: 1.3vw;
                }
                body {
                    margin: 0 !important;
                }

                header {
                    filter: opacity(0.5);
                }

                main, .pb-3 {
                    padding-bottom: 0 !important;
                }

                nav {
                    margin-bottom: 0 !important;
                }

                .mb-3 {
                    margin-bottom: 0 !important;
                }

                footer {
                    display: none;
                }

                header:hover {
                    filter: opacity(1);
                }
            </style>
        </head>
    }
}

<div class="body">
<form asp-action="LoginStaff" asp-controller="Staff" method="post" class="logform">
        <div class="logcontent1">
    <div class="reg" style="justify-content:center !important">
        <div class="log1">
            <label asp-for="Email"></label>
            <label asp-for="Password"></label>
            <label asp-for="StaffCode"></label>
        </div>
        <div class="log2">
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="StaffCode" type="StaffCode" />
            <span asp-validation-for="StaffCode" class="text-danger"></span>
        </div>
    </div>
    <div class="regbelow" style="justify-content:space-around !important">
        <div class="regtext">
            <p>Don't have an account?</p>
            <a text-dark" asp-area="" asp-controller="User" asp-action="Register">Create and account</a>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    </div>
        <div class="logimg1">
        </div>
</form>
</div>