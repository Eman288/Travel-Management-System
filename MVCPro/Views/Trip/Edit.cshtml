@model MVCPro.Models.Trip

<head>
    <style>
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h2 {
            color: #7ab730;
        }


        lable {
            color: azure;
        }

        input {
            margin-bottom: 10px;
        }

        button {
            background-color: azure !important;
            color: #7ab730 !important;
            border: 1px solid transparent !important;
        }

        body {
            margin: 0 !important;
        }

        header {
            filter: opacity(0.5);
        }

        main, .pb-3 {
            padding-bottom: 0 !important;
        }

        nav {
            margin-bottom: 0 !important;
        }

        .mb-3 {
            margin-bottom: 0 !important;
        }

        footer {
            display: none;
        }

        header:hover {
            filter: opacity(1);
        }
    </style>
</head>

<h2>Edit Trip</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="att">
    <input type="hidden" asp-for="TripId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FromLocation" class="control-label"></label>
        <input asp-for="FromLocation" class="form-control" />
        <span asp-validation-for="FromLocation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BusID" class="control-label"></label>
        <select asp-for="BusID" class="form-control">
            <option value="">Choose bus</option>
            @{
                string? res;
            }
            @foreach (int busId in ViewBag.Buses)
            {
                res = Model.BusID == busId ? "selected" : "";
                <option value="@busId" {@res}>@busId</option>
            }
        </select>
        <span asp-validation-for="BusID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="file" id="ProfilePicture" name="ProfilePicture" />
        <span asp-validation-for="ImageUser" class="text-danger"></span>
    </div>
    <input asp-for="staff" class="form-control" hidden />


    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>