@model MVCPro.Models.Trip
@{
    ViewData["Title"] = "Add Trip";
}

<head>
    <style>
        .logimg1 {
            background-image: url('@Url.Content("~/imags/tripCreate.jpeg")');
            background-size: cover;
        }

        body {
            margin: 0 !important;
        }

        header {
            filter: opacity(0.5);
        }

        main, .pb-3 {
            padding-bottom: 0 !important;
        }

        nav {
            margin-bottom: 0 !important;
        }

        .mb-3 {
            margin-bottom: 0 !important;
        }

        footer {
            display: none;
        }

        header:hover {
            filter: opacity(1);
        }
        main
        {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logimg1 {
            height: 90.7vh;
        }

        .reg label
        {
            padding: 6px;
        }
    </style>
</head>


<form asp-controller="Trip" asp-action="CreateTrip" method="post" class="regform" enctype="multipart/form-data">
    <div class ="logcontent1">
        <div class="reg">
            <div class="log1">
                <label asp-for="Name" class="control-label">Name:</label>
                <label asp-for="FromLocation" class="control-label">From Location:</label>
                <label asp-for="StartDate" class="control-label">Start Date:</label>
                <label asp-for="EndDate" class="control-label">End Date:</label>
                <label asp-for="City" class="control-label">City:</label>
                <label asp-for="Price" class="control-label">Price:</label>
                <label asp-for="Description" class="control-label">Description:</label>
                <label asp-for="BusID" class="control-label">Bus ID:</label>
                <label for="ProfilePicture">Picture:</label>
            </div>
            <div class="log2">
                <input asp-for="Name" class="form-control" required />

                <input asp-for="FromLocation" class="form-control" required />

                <input asp-for="StartDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" required />

                <input asp-for="EndDate" class="form-control" type="date" id="EndDate" required />

                <select asp-for="City" class="form-control" required>
                    <option value="">Select Government</option>
                    <option value="Cairo">Cairo</option>
                    <option value="Alexandria">Alexandria</option>
                    <option value="Port Said">Port Said</option>
                    <option value="Suez">Suez</option>
                    <option value="Damietta">Damietta</option>
                    <option value="Dakahlia">Dakahlia</option>
                    <option value="Gharbia">Gharbia</option>
                    <option value="Kafr El Sheikh">Kafr El Sheikh</option>
                    <option value="Sharkia">Sharkia</option>
                    <option value="North Sinai">North Sinai</option>
                    <option value="South Sinai">South Sinai</option>
                    <option value="Ismailia">Ismailia</option>
                    <option value="Giza">Giza</option>
                    <option value="Fayoum">Fayoum</option>
                    <option value="Beni Suef">Beni Suef</option>
                    <option value="Beni Suef">Aswan</option>
                    <option value="Minya">Minya</option>
                    <option value="Asyut">Asyut</option>
                    <option value="New Valley">New Valley</option>
                    <option value="Sohag">Sohag</option>
                    <option value="Qena">Qena</option>
                    <option value="Luxor">Luxor</option>
                    <option value="Aswan">Aswan</option>
                    <option value="Red Sea">Red Sea</option>
                    <option value="Matrouh">Matrouh</option>
                    <option value="Beheira">Beheira</option>
                    <option value="Menoufia">Menoufia</option>
                </select>

                <input asp-for="Price" class="form-control" required />

                <input asp-for="Description" class="form-control" required />

                <input asp-for="BusID" class="form-control" required />

                <input type="file" id="ProfilePicture" name="ProfilePicture" style="width: -webkit-fill-available;" />
            </div>
        </div>
        <div class="regbelow">
            <button type="submit" class="btn-primary">Add Trip</button>
        </div>
    </div>
        
    <div class="logimg1">
    </div>
</form>
    <script>
        var startDateInput = document.getElementById("StartDate");
        var endDateInput = document.getElementById("EndDate");
        startDateInput.addEventListener("change", function () {
            endDateInput.min = startDateInput.value;
        });
    </script>
