@model List<MVCPro.Models.TouristAttraction>

<head>
    <style>
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        select
        {
            width: 20px;
            margin: 20px;
            height: 56px;
        }

        h2 {
            color: #7ab730;
        }

        

        lable {
            color: azure;
        }

        input {
            margin-bottom: 10px;
        }

        button {
            background-color: azure !important;
            color: #7ab730 !important;
            border: 1px solid transparent !important;
        }
        .att
        {
            display: flex;
            flex-direction: column;
            align-items: baseline;
            width: 80vw;
            margin: 50px 0;
         }

        body {
            margin: 0 !important;
        }

        header {
            filter: opacity(0.5);
        }

        main, .pb-3 {
            padding-bottom: 0 !important;
        }

        nav {
            margin-bottom: 0 !important;
        }

        .mb-3 {
            margin-bottom: 0 !important;
        }

        footer {
            display: none;
        }

        header:hover {
            filter: opacity(1);
        }
    </style>
</head>

<h1 style="margin-top: 50px">Attach a Tourist Attraction to The Trip</h1>
<form asp-controller="Trip" asp-action="AttachToTourist" class="att">
    <label for = "tours" class="control-label">Name:</label>
    @if(Model.Count == 0)
    {
        <h4>No more Tourists to add!</h4>
    }
    else
    {
    <select id="tours" name="selectedTourIds" multiple="multiple" class="form-control regform" required>
        @foreach (var item in Model)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
    <button type="submit">Submit</button>
    }
</form>
