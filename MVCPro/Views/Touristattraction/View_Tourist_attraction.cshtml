</form>
<a asp-controller="Touristattraction" asp-action="delete_Tourist_attraction" asp-route-id="@ta.Id" class="btn btn-primary">delete</a>
<a asp-controller="Touristattraction" asp-action="Update" asp-route-id="@ta.Id" class="btn btn-primary">Update</a>