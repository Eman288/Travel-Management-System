@{
    TouristAttraction ta = (TouristAttraction)ViewData["currentTouristAttraction"];
}
@model MVCPro.Models.TouristAttraction
<form asp-controller="Touristattraction" asp-action="Update" method="post">
    <p>@ta.Name</p>
    <p>@ta.Description</p>
