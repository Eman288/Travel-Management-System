@model MVCPro.Models.TouristAttraction
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    if (Model == null)
    {
        //return redir
    }
}
<head>
    <style>
        .logimg1 {
            background-image: url('@Url.Content("~/imags/tourCreate.jpeg")');
            background-size: cover;
        }

        body {
            margin: 0 !important;
        }

        header {
            filter: opacity(0.5);
        }

        main, .pb-3 {
            padding-bottom: 0 !important;
        }

        nav {
            margin-bottom: 0 !important;
        }

        .mb-3 {
            margin-bottom: 0 !important;
        }

        footer {
            display: none;
        }

        header:hover {
            filter: opacity(1);
        }
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .logimg1 {
            height: 90.7vh;
        }
        
    </style>
    </head>
<form asp-controller="Touristattraction" asp-action="add_Tourist_attraction" class="regform" method="post" enctype="multipart/form-data">
    <div class="logcontent1">
        <div class="reg">
            <div class="log1">
                <label for="Name">Name</label>
                <label for="Description">Description</label>
                <label for="City">City</label>
                <label for="TouristAttractionPicture">Picture</label>
            </div>
            <div class="log2">
                <input type="text" id="Name" name="Name" value="@Model.Name" required />
                <span asp-validation-for="Name" class="text-danger"></span>

                <input type="text" id="Description" name="Description" value="@Model.Description" required />
                <span asp-validation-for="Description" class="text-danger"></span>

                <input type="text" id="City" name="City" value="@Model.City" />
                <span asp-validation-for="City" class="text-danger"></span>

                <input type="file" id="TouristAttractionPicture" name="TouristAttractionPicture" value="@Model.Picture" style="width: -webkit-fill-available;" />
                <span asp-validation-for="TouristAttractionPicture" class="text-danger"></span>
            </div>
        </div>
        <div class="regbelow">
            <button type="submit" class="btn btn-primary">add tourist attraction</button>
        </div>
    </div>

    <div class="logimg1">
    </div>
</form>
