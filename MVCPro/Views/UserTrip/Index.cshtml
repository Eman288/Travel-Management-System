@model IEnumerable<MVCPro.Models.UserTrip>

@{
    ViewData["Title"] = "User Trips";
}

<div class="container">
    <h1>User Trips</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Trip Name</th>
                <th>User Name</th>
                <th>Book Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Trip.Name</td>
                    <td>@item.User.UserName</td>
                    <td>@item.BookDate.ToShortDateString()</td>
                    <td>
                        <form asp-action="Delete" asp-route-userId="@item.UserId" asp-route-tripId="@item.TripId" method="post">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user trip?')">Delete</button>
                            @* Optionally, you can add a link for viewing details or editing *@
                            @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> *@
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
