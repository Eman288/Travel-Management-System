@model MVCPro.Models.UserTrip

@{
    ViewData["Title"] = "Delete User Trip";
}

<h1>Delete User Trip</h1>

<h3>Are you sure you want to delete this user trip?</h3>
<div>
    <h4>User Trip</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Trip Name
        </dt>
        <dd class="col-sm-10">
            @Model.Trip?.Name ?? "N/A"
        </dd>
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Model.User?.UserName ?? "N/A"
        </dd>
        <dt class="col-sm-2">
            Book Date
        </dt>
        <dd class="col-sm-10">
            @Model.BookDate.ToShortDateString()
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-userId="@Model.UserId" asp-route-tripId="@Model.TripId" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="TripId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user trip?')" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
