@model MVCPro.Models.User
@{
    MVCPro.Shared.global.i = 0;
    var viewName = ViewContext.RouteData.Values["action"].ToString();
    if (viewName == "Register")
    {
        <head>
            <style>
                .logimg1 {
                    background-image: url('@Url.Content("~/imags/userregister.png")');
                    background-size: cover;
                }

                body {
                    margin: 0 !important;
                }

                header {
                    filter: opacity(0.5);
                }

                main, .pb-3 {
                    padding-bottom: 0 !important;
                }

                nav {
                    margin-bottom: 0 !important;
                }

                .mb-3 {
                    margin-bottom: 0 !important;
                }

                footer {
                    display: none;
                }
                .reg label
                {
                    margin: 20px 0 20px 0;
                }
                input
                {
                    width: -webkit-fill-available;
                }

                header:hover {
                    filter: opacity(1);
                }
            </style>
        </head>
    }
}

<form asp-controller="User" asp-action="Register" method="post" class="regform" enctype="multipart/form-data">
    <div class="logcontent1">
        <div class="reg">
            <div class="log1">
                <label for="nationalid">National ID</label>
                <label for="username">Name</label>
                <label for="job">Job</label>
                <label for="Nationality">Nationality</label>
                <label for="BirthDate">Birth Date</label>
                <label for="Email">Email</label>
                <label for="Password">Password</label>
                <label for="Password">Config Password</label>
                <label for="ProfilePicture">Add Picture</label>
            </div>
            <div class="log2">
                <input type="text" id="nationalid" name="nationalid" value="@Model.NationalId" required />
                <span asp-validation-for="NationalId" class="text-danger"></span>
                <input type="text" id="username" name="username" value="@Model.UserName" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input type="text" id="Job" name="Job" value="@Model.Job" />
                <input type="text" id="Nationality" name="Nationality" value="@Model.Nationality" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
                <input type="date" id="BirthDate" name="BirthDate" max="2006-12-31" value="@Model.BirthDate" required />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
                <input type="email" id="Email" name="Email" value="@Model.Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input type="password" id="Password" name="Password" value="@Model.Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input input type="password" id="ConfirmPassword" name="ConfirmPassword" required />
                <input type="file" id="ProfilePicture" name="ProfilePicture" style="width: -webkit-fill-available;" />
                @if (ViewBag.errorphoto != null)
                {
                    <span>@ViewBag.errorphoto</span>
                }
            </div>
        </div>
        <div class="regbelow">
            <div class="regtext">
                <p>Already have an account?</p>
                <a text-dark" asp-area="" asp-controller="User" asp-action="select">Let's sign in</a>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </div>
    <div class="logimg1"> 
    </div>
</form>
